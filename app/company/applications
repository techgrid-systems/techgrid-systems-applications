    <script>
        const m365Apps = [
            { name: "Bookings", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/bookings_24x1.svg", url: "https://outlook.office.com/bookings/" },
            { name: "Calendar", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/calendar_24x1.svg", url: "https://outlook.office.com/calendar/" },
            { name: "Excel", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/excel_24x1.svg", url: "https://www.office.com/launch/excel" },
            { name: "Forms", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/forms_24x1.svg", url: "https://forms.office.com/" },
            { name: "OneDrive", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/onedrive_24x1.svg", url: "https://onedrive.live.com/" },
            { name: "OneNote", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/onenote_24x1.svg", url: "https://www.onenote.com/" },
            { name: "Outlook", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/outlook_24x1.svg", url: "https://outlook.office.com/" },
            { name: "Planner", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/planner_24x1.svg", url: "https://tasks.office.com/" },
            { name: "Power Automate", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/powerautomate_24x1.svg", url: "https://make.powerautomate.com/" },
            { name: "Power BI", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/powerbi_24x1.svg", url: "https://app.powerbi.com/" },
            { name: "PowerPoint", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/powerpoint_24x1.svg", url: "https://www.office.com/launch/powerpoint" },
            { name: "SharePoint", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/sharepoint_24x1.svg", url: "https://www.office.com/launch/sharepoint" },
            { name: "Teams", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/teams_24x1.svg", url: "https://teams.microsoft.com/" },
            { name: "Word", icon: "https://res.cdn.office.net/midgard/versionless/fluentui-resources/1.1.6/assets/brand-icons/product/svg/word_24x1.svg", url: "https://www.office.com/launch/word" }
        ];

        const supportApps = [
            { name: "Report a Problem", iconClass: "fa-life-ring", color: "text-rose-600", url: "index.html" },
            { name: "Request Service", iconClass: "fa-clipboard-list", color: "text-blue-500", url: "index.html" },
            { name: "Ticket Updates", iconClass: "fa-ticket-alt", color: "text-slate-800", url: "index.html" }
        ];

        function createAppCard(app, isSupport = false) {
            const card = document.createElement('div');
            card.className = 'app-card flex flex-col items-center text-center p-2 group';
            card.onclick = () => window.open(app.url, '_blank');
            
            let iconHtml = '';
            if (isSupport) {
                iconHtml = `
                    <div class="icon-support mb-3 group-hover:scale-110 transition-transform">
                        <i class="fas ${app.iconClass} ${app.color} text-xl"></i>
                    </div>
                `;
            } else {
                iconHtml = `<img src="${app.icon}" alt="${app.name}" class="w-12 h-12 mb-3 object-contain group-hover:scale-110 transition-transform" onerror="this.src='https://via.placeholder.com/48?text=App'">`;
            }

            card.innerHTML = `
                ${iconHtml}
                <span class="text-[11px] font-medium leading-tight text-gray-700">${app.name}</span>
            `;
            return card;
        }

        function renderApps(filter = "") {
            const m365Grid = document.getElementById('m365Grid');
            const supportGrid = document.getElementById('supportGrid');
            const m365Section = document.getElementById('m365Section');
            const supportSection = document.getElementById('supportSection');

            m365Grid.innerHTML = "";
            supportGrid.innerHTML = "";

            const filteredM365 = m365Apps.filter(app => app.name.toLowerCase().includes(filter.toLowerCase()));
            const filteredSupport = supportApps.filter(app => app.name.toLowerCase().includes(filter.toLowerCase()));

            filteredM365.forEach(app => m365Grid.appendChild(createAppCard(app)));
            filteredSupport.forEach(app => supportGrid.appendChild(createAppCard(app, true)));

            m365Section.style.display = filteredM365.length ? "block" : "none";
            supportSection.style.display = filteredSupport.length ? "block" : "none";
        }

        document.getElementById('appSearch').addEventListener('input', (e) => {
            renderApps(e.target.value);
        });

        renderApps();
    </script>
